{
  "linters": {
    "*.css": ["prettier-eslint --write", "stylelint --fix", "git add"],
    "*.js": [
      "import-sort --write",
      "prettier-eslint --write",
      "flow focus-check",
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "*.json": ["prettier-eslint --write", "git add"]
  },
  "ignore": ["flow-typed/**"]
}
